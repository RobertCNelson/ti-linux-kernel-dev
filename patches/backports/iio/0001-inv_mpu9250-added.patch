+static int inv_get_shift2(int count)
+{
+	int i;
+
+	if (1 == count)
+		return 13;
+	if (count > 2000)
+		return 2;
+	i = 13;
+	while (count > 0) {
+		count >>= 1;
+		i--;
+	}
+
+	return i;
+}
