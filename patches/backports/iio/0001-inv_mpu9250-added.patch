+	result = mpu_memory_read(st, st->i2c_addr,
+			MPU6500_MEM_REV_ADDR, 1, &sw_rev);
+	sw_rev &= INV_MPU_REV_MASK;
+	if (result)
+		return result;
+	if (sw_rev != 0)
