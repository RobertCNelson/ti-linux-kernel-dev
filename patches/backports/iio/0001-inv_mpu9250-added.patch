+		return sprintf(buf, "%d,%d,%d,%d,%d,%d,%d,%d,%d\n",
+			m[0], m[1], m[2], m[3], m[4], m[5], m[6], m[7], m[8]);
+	case ATTR_SECONDARY_NAME:
+	{
+		const char *n[] = {"NULL", "AK8975", "AK8972", "AK8963",
+					"BMA250", "MLX90399"};
+		switch (st->plat_data.sec_slave_id) {
