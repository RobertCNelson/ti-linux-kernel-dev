+int inv_enable_tap_dmp(struct inv_mpu_state *st, bool on)
+{
+	int result;
+
+	result = inv_set_tap_interrupt_dmp(st, on);
+	if (result)
+		return result;
+	result = inv_set_tap_threshold_dmp(st, st->tap.thresh);
+	if (result)
