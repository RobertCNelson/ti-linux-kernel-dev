+	c = &st->chip_config;
+	b = 0;
+	if (st->chip_config.dmp_on) {
+		for (i = 0; i < SENSOR_NUM_MAX; i++) {
+			if (st->sensor[i].on)
+				b += st->sensor[i].sample_size;
+		}
+	} else {
+		if (st->sensor[SENSOR_ACCEL].on)
+			b += BYTES_PER_SENSOR;
+		if (st->sensor[SENSOR_GYRO].on)
+			b += BYTES_PER_SENSOR;
+	}
+	c->bytes_per_datum = b;
+
+	return;
