+	u8 d;
+
+	d = ((val >> 8) & 0xff);
+	result = inv_i2c_single_write(st, reg, d);
+	if (result)
+		return result;
+
+	d = (val & 0xff);
+	result = inv_i2c_single_write(st, reg + 1, d);
+
+	return result;
