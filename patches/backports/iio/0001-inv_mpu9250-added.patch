+static int inv_set_shake_reject_thresh_dmp(struct inv_mpu_state *st,
+						int thresh)
+{
+	int result;
+	u8 sampleDivider;
+	int thresh_scaled;
+	u32 gyro_sf;
+	const u32 gyro_sens = 0x03e80000;
+
+	sampleDivider = st->sample_divider;
+	gyro_sf = inv_q30_mult(gyro_sens, (int)(DMP_TAP_SCALE *
+			(sampleDivider + 1)));
