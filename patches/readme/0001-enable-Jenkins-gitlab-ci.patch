diff --git a/.gitlab-ci.yml b/.gitlab-ci.yml
new file mode 100644
index 000000000000..0b37f860d683
--- /dev/null
+++ b/.gitlab-ci.yml
@@ -0,0 +1,13 @@
+image: robertcnelson/debian-bullseye-slim-linux-compile:latest
+
+build:
+  tags:
+    - docker-amd64
+  stage: build
+  script:
+    - ./jenkins_build.sh
+  artifacts:
+    expire_in: 5 days
+    name: "$CI_PROJECT_NAME-$CI_COMMIT_BRANCH-$CI_JOB_ID"
+    paths:
+      - "linux-image*.deb"
diff --git a/Jenkinsfile b/Jenkinsfile
new file mode 100644
index 000000000000..5d5776ff0e8b
--- /dev/null
+++ b/Jenkinsfile
@@ -0,0 +1,11 @@
+pipeline {
+    agent { label 'amd64'}
+
+    stages {
+        stage('Build') {
+            steps {
+                sh '/bin/bash ./jenkins_build.sh'
+            }
+        }
+    }
+}
diff --git a/README.md b/README.md
new file mode 100644
index 000000000000..35f4caf8a15a
--- /dev/null
+++ b/README.md
@@ -0,0 +1,3 @@
